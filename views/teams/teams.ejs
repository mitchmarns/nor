<div class="dashboard-hero">
  <h1 class="dashboard-welcome">Teams</h1>
    <div class="dashboard-actions">
      <a href="/teams/create" class="btn btn-sm">
        <i class="ph-plus-duotone"></i> New Team
      </a>
    </div>
</div>

  <% if (teams.length > 0) { %>
    <div class="row">
      <% teams.forEach(team => { %>
        <div class="col-md-4 col-6 mb-4">
          <div class="card card-team">
            <% if (team.logoUrl) { %>
              <img src="<%= team.logoUrl %>" class="card-img-top" alt="<%= team.name %> Logo">
            <% } else { %>
              <img src="/images/default-logo.png" class="card-img-top" alt="Default Logo">
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= team.name %></h5>
              <div class="card-text">
                <p><span class="card-info-label">City:</span> <%= team.city || 'Not specified' %></p>
                <p><span class="card-info-label">Mascot:</span> <%= team.mascot || 'Not specified' %></p>
                <div class="color-display" style="--primary-color: <%= team.primaryColor || '#ccc' %>; --secondary-color: <%= team.secondaryColor || '#eee' %>; --accent-color: <%= team.accentColor || '#ddd' %>;"></div>
              </div>
              <div class="d-flex justify-content-between mt-3">
                <a href="/teams/<%= team.id %>" class="btn">View Team</a>
                <% if (locals.user) { %>
                  <a href="/teams/<%= team.id %>/edit" class="btn">Edit</a>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 mx-auto">
      <div class="no-content-message mt-4">
        <i class="ph-duotone ph-users" style="font-size: 2.5rem; color: var(--accent1); margin-bottom: 1rem;"></i>
        <h2 style="margin-bottom: 0.5rem;">No Teams Yet</h2>
        <p>No teams found in the system yet.</p>
        <p>Click the button above to add the first team!</p>
      </div>
    </div>
  </div>
  <% } %>
</div>